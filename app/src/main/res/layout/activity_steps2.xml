<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="@drawable/backgroundsteps"
    tools:context=".Steps">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="676dp"
        android:fontFamily="@font/qartella_bold"
        android:text="First, some steps"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="223dp"
        android:layout_height="40dp"
        android:layout_marginBottom="288dp"
        android:gravity="center"
        android:fontFamily="@font/qartella_regular"
        android:text="We need access to your camera to be able to analyse your water."
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

     <TextView
        android:id="@+id/imagePlaceholder"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/camera_illustration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:layout_marginBottom="328dp"
        android:fontFamily="@font/qartella_bold"
        android:text="Give access to your camera"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="293dp"
        android:layout_height="31dp"
        android:layout_marginBottom="148dp"
        android:gravity="center"
        android:fontFamily="@font/qartella_regular"
        android:text="You still can change the permissions in your settings"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/buttonblue"
        android:fontFamily="@font/qartella_bold"
        android:text="Allow"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/qartella_regular"
        android:text="Not now"
        android:textColor="#486292"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>